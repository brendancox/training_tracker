<h1>Add Workout</h1>

<div class="row">
  <div class="col-md-8">

    <%= form_for(@workout) do |f| %>

      <%= f.label "Name" %>
      <%= f.text_field :name, value: @template_workout[:name] %><br>

      <%= f.label "Date and Time" %>
      <%= f.date_select :workout_date, default: @template_workout[:workout_date] %>
      <%= f.select(:workout_time, ["","morning","afternoon","evening","night"]) %>

      <%= render 'layouts/workout_form', f: f %>

        <tr>
          <td></td>
          <td><%= f.submit "Record Workout"%></td>
        </tr>

      </table>

    <% end %>

  </div>
</div>
