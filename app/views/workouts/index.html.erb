<% @workouts.each do |workout| %>
  <%= div_for workout do %>
	<%= workout.workout_date %> -   	
    <% if workout.name.empty? %>
    	<%= link_to "Workouts ##{workout.id}", workout_url(workout.id) %>
    <% else %>
    	<%= link_to workout.name, workout_url(workout.id) %>
    <% end %>
    - 
    <% if workout.completed == true %>
      Completed
    <% else %>
      Scheduled
    <% end %>
    - 
    <%= link_to "view", workout_url(workout.id) %>
    <%= link_to "update", edit_workout_path(workout.id) %>
    <%= link_to "delete", workout, method: :delete, remote: true %><br>
  <% end %>
<% end %>
