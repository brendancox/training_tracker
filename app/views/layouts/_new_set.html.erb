<div class="exercise-fields">

  <%= f.fields_for "sets[]", component_set do |h| %>

    <%= h.select(:workout_component_id, @set_component_array, selected: @template_workout[:sets][index][:workout_id]) %>
    <% puts @template_workout[:sets][index][:grams] %>
    <%= h.number_field :grams, value: @template_workout[:sets][index][:kg], class: 'number-entry'  %>kg 
    <%= h.number_field :reps, value: @template_workout[:sets][index][:reps], class: 'number-entry' %>reps 
    <%= h.number_field :num_of_sets, value: @template_workout[:sets][index][:num_of_sets], 
                            class: 'number-entry' %>sets 
     - Rest: <%= h.number_field :rest, value: @template_workout[:sets][index][:rest],
                            class: 'number-entry' %>s
    <%= h.select(:intensity_plan, ["","Increase Intensity Soon", "Decrease Intensity Soon"]) %>                       
    <%= link_to image_tag('remove.png'), '#', class: "removeExercise" %>
    <%= link_to "Duplicate", '#', class: "duplicateExercise" %>
  <% end %>

</div>