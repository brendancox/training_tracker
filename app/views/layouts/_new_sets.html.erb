
  
  <%= f.fields_for :component_sets do |h| %>
    <tbody class='exercise-fields sets'>
      <tr>
        <%= h.hidden_field :order %>
        <td><%= h.select(:workout_component_id, @set_component_array) %></td>
        <td><%= h.number_field :kg, class: 'number-entry'  %> kg</td>
        <td><%= h.number_field :reps, class: 'number-entry' %> reps .   
        <%= h.number_field :num_of_sets, class: 'number-entry' %> sets </td>
        <td>Rest: <%= h.number_field :rest, class: 'number-entry' %>s</td>
        <td><%= h.hidden_field '_destroy', value: false, class: 'destroy' %>
        <%= link_to image_tag('remove.png'), '#', class: "removeExercise" %></td>
      </tr>
    </tbody>
    <script type='text/javascript'>componentsCount['sets']++;</script>
  <% end %>
