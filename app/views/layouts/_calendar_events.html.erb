<script type='text/javascript'>
	var newWorkoutUrl = '<%= url_for new_workout_url %>';
	var newEventsArray = [];
	var eventsArray =
	    [
			<% @workouts.each do |workout| %>
		        {	
		        	<% if workout.completed == true %>
			        	<% if workout.name.empty? %>
			            	title: 'Workout',
			            <% else %>
			            	title: '<%= workout.name %>',
			            <% end %>
			            
			            url: '<%= url_for workout %>',
			            	//Adding colors for different time periods along with generic times so 
			            	//that they are ordered within each calendar day
			            <% if workout.workout_time == 'morning' %>
			            	start: '<%= workout.workout_date.to_s %>T05:00:00',
			            	color: '#00CCFF'
			            <% elsif workout.workout_time == 'evening' %>
			            	start: '<%= workout.workout_date.to_s %>T17:00:00',
			            	color: '#000099'
			            <% elsif workout.workout_time == 'night' %>
			            	start: '<%= workout.workout_date.to_s %>T22:00:00',
			            	color: '#000066'
			            <% else %>
			            	start: '<%= workout.workout_date.to_s %>T13:00:00',
			            	color: '#0000FF'
			            <% end %>
			        <% else %>
			        				        	<% if workout.name.empty? %>
			            	title: 'Workout',
			            <% else %>
			            	title: '<%= workout.name %>',
			            <% end %>
			            
			            url: '<%= url_for workout %>',
			            	//Adding colors for different time periods along with generic times so 
			            	//that they are ordered within each calendar day
			            <% if workout.workout_time == 'morning' %>
			            	start: '<%= workout.workout_date.to_s %>T05:00:00',
			            	color: '#FFFF66',
			            	textColor: 'black'
			            <% elsif workout.workout_time == 'evening' %>
			            	start: '<%= workout.workout_date.to_s %>T17:00:00',
			            	color: '#FFCC00',
			            	textColor: 'black'
			            <% elsif workout.workout_time == 'night' %>
			            	start: '<%= workout.workout_date.to_s %>T22:00:00',
			            	color: '#FF9900',
			            	textColor: 'black'
			            <% else %>
			            	start: '<%= workout.workout_date.to_s %>T13:00:00',
			            	color: '#FFFF00',
			            	textColor: 'black'
			            <% end %>
			        <% end %>
		        },
	        <% end %>
    	];
</script>