<h1>Add Workout Template</h1>

<div class="row">
  <div class="col-md-8">

    <%= form_for(@workout) do |f| %>

      <%= f.label "Name", class: 'sr-only' %>
      <%= f.text_field :name %>

      <br>

      <%= render 'layouts/workout_form2', f: f %>

      <%= f.submit "Save Template"%>

    <% end %>

    <%= link_to "Add New Type of Exercise", new_workout_component_url %>

  </div>

  <%= render 'layouts/right_panel' %>
  
</div>